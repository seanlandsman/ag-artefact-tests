{
  "name": "react-17-tsx-test-packages",
  "version": "1.0.0",
  "description": "A test to determine whether Ag-Grid 30 can work with Jest",
  "main": "index.ts",
  "scripts": {
    "dev": "webpack-dev-server --mode=development",
    "lint": "eslint --ext .js,.ts,.tsx src/ localDevServer/",
    "lint-fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.7",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^18.0.9",
    "cross-env": "^7.0.3",
    "css-loader": "^3.6.0",
    "depcheck": "^1.4.3",
    "eslint-plugin-sort-exports": "^0.8.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.4.0",
    "typescript": "^4.6.3",
    "webpack": "^5.84.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "ag-grid-community": "../../ag-grid-community-30.0.6.tgz",
    "ag-grid-react": "../../ag-grid-react-30.0.6.tgz"
  },
  "jest": {
    "roots": [
      "./src"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}",
      "!**/*.test.{js,jsx,ts,tsx}",
      "!**/*.spec.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "ci/coverage",
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/testStyleMock.js"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "endOfLine": "auto"
  }
}